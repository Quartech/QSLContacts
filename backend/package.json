{
  "name": "backend-api",
  "version": "1.0.0",
  "description": "Backend API for QSLContacts",
  "main": "dist/server.js",
  "scripts": {
    "start": "nodemon dist/server.js",
    "prebuild": "npm run clean",
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "clean": "rimraf dist",
    "dev": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/server.ts",
    "prod": "npm run build && npm run start",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "test": "cross-env TS_NODE_PROJECT=./tsconfig.spec.json && mocha --require mochaSetup --require ts-node/register src/**/*.spec.ts"
  },
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "dotenv": "6.0.0",
    "http-status": "1.2.0",
    "restify": "7.2.1",
    "restify-cors-middleware": "1.1.1",
    "restify-errors": "6.1.1",
    "restify-url-semver": "1.1.1",
    "winston": "3.0.0",
    "xml-js": "^1.6.7"
  },
  "devDependencies": {
    "@types/chai": "4.1.4",
    "@types/dotenv": "4.0.3",
    "@types/http-status": "0.2.30",
    "@types/mocha": "5.2.4",
    "@types/node": "10.5.2",
    "@types/restify": "7.2.3",
    "@types/supertest": "2.0.4",
    "@types/winston": "2.3.9",
    "chai": "4.1.2",
    "cross-env": "5.2.0",
    "mocha": "5.2.0",
    "nodemon": "1.18.1",
    "rimraf": "2.6.2",
    "supertest": "3.1.0",
    "ts-node": "7.0.0",
    "tslint": "5.10.0",
    "typescript": "2.9.2"
  }
}
